{
    "name": "rn-smart-image",
    "version": "0.1.5",
    "description": "A smart image loading library for React Native with caching, progressive loading, and full-screen preview capabilities.",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "react-native": "src/index.ts",
    "source": "src/index.ts",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "prepack": "bob build",
        "release": "release-it"
    },
    "keywords": [
        "react-native",
        "ios",
        "android",
        "image",
        "cache",
        "fs"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hesolco/rn-smart-image.git"
    },
    "author": "hesolco (https://github.com/hesolco)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hesolco/rn-smart-image/issues"
    },
    "homepage": "https://github.com/hesolco/rn-smart-image#readme",
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "dependencies": {
        "@react-native-community/netinfo": "^11.0.0",
        "react-native-fs": "^2.20.0"
    },
    "devDependencies": {
        "@react-native-community/eslint-config": "^3.2.0",
        "@types/jest": "^29.5.0",
        "@types/react": "^18.2.0",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "prettier": "^2.8.8",
        "react": "18.2.0",
        "react-native": "0.74.0",
        "react-native-builder-bob": "^0.30.0",
        "typescript": "^5.0.0"
    },
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
